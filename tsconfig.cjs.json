{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module":           "CommonJS",
    "moduleResolution": "Node10",
    "outDir":           "./dist/cjs",
    "declaration":      false,
    "declarationMap":   false,
    "sourceMap":        true
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "esm": false
  }
}
