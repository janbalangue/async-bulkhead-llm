{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target":           "ES2022",
    "lib":              ["ES2022"],
    "moduleResolution": "Bundler",
    "strict":           true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess":   true,
    "noImplicitOverride":         true,
    "skipLibCheck":               true
  },
  "include": ["src", "test"]
}
